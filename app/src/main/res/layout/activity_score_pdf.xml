<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Query.ScorePdfActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_back_pdf"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/back"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_back_pdf"
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_arrow_2" />

<!--        <TextView-->
<!--            android:id="@+id/tv_info_pdf"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginLeft="117.6dp"-->
<!--            android:text="成绩总表"-->
<!--            android:textColor="#fff"-->
<!--            android:textSize="20sp" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/pdf_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="华北电力大学学业成绩表">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#B4B3B3"/>


    <include
        layout="@layout/credit_item"
        android:id="@+id/table_title1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#B4B3B3"/>

    <include
        layout="@layout/pdf_list_item"
        android:id="@+id/table_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="#B4B3B3"/>

    <ListView
        android:id="@+id/total_grade_table"
        android:divider="#B4B3B3"
        android:dividerHeight="1.0dip"
        android:scrollbars="none"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>